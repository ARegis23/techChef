rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Permite que um utilizador autenticado leia e escreva apenas no seu próprio documento.
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Regra para a subcoleção 'family'
      match /family/{memberId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }

      // Regra para a subcoleção 'recipes'
      match /recipes/{recipeId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }

      // Regra para a subcoleção 'inventory'
      match /inventory/{itemId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }

      // NOVA REGRA: Permite que o admin gira a sua lista de compras ativa.
      match /shoppingLists/{listId} {
         allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }

      // NOVA REGRA: Permite que o admin gira o seu histórico de compras.
      match /shoppingHistory/{historyId} {
         allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
